<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.kontak.KontakFragment">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/headerkotakemas"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <ImageButton
            android:background="#DAA21B"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20sp"
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_arrow_left" />

        <TextView
            android:textStyle="bold"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="16dp"
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsregular"
            android:text="Kontak"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_wa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="72dp"
        android:text="WA : 6282288052021"
        android:textColor="#000000"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout" />

    <TextView
        android:id="@+id/tv_ig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Instagram : @hore_horeTeam"
        android:textColor="#000000"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="@+id/tv_wa"
        app:layout_constraintTop_toBottomOf="@+id/tv_wa" />

    <TextView
        android:id="@+id/tv_twitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Twitter : @horehoreteamtwit"
        android:textColor="#000000"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="@+id/tv_line"
        app:layout_constraintTop_toBottomOf="@+id/tv_line" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Email : horehoreteam@gmail.com"
        android:textColor="#000000"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="@+id/tv_ig"
        app:layout_constraintTop_toBottomOf="@+id/tv_ig" />

    <TextView
        android:id="@+id/tv_FB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Facebook : horehoreteamfb"
        android:textColor="#000000"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="@+id/tv_twitter"
        app:layout_constraintTop_toBottomOf="@+id/tv_twitter" />

    <TextView
        android:id="@+id/tv_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Line : horehoreteamline"
        android:textColor="#000000"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="@+id/tv_telegram"
        app:layout_constraintTop_toBottomOf="@+id/tv_telegram" />

    <TextView
        android:id="@+id/tv_telegram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Telegram : Horee"
        android:textColor="#000000"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="@+id/tv_email"
        app:layout_constraintTop_toBottomOf="@+id/tv_email" />

</androidx.constraintlayout.widget.ConstraintLayout>